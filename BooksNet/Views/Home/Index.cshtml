@{
  ViewBag.Title = "Home Page";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="index-page" ng-class="{'books-search':books,'background-size-small':backgroundSize}" dir="@Resource._dir">

    <div class="wrapper">
        <div class="header header-filter header-imgae">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="brand">
                            <h1>@ProfileMapper.Get().Name</h1>
                            <h3>@ProfileMapper.Get().Description</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="main main-raised">
            <div class="section section-basic">
                <div ng-view></div>
            </div>
        </div>
    </div>
</div>

<div class="spinner-overlay" style="z-index:999999;">
    <div class="fixed-center">
        <div class="circle-spin ">
            <div class="circle">
            </div>
        </div>
    </div>
</div>