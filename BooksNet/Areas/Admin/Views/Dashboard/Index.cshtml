@model BooksNet.Areas.Admin.ViewModels.Dashboard.DashboardViewModel

@{
  ViewBag.Title = "Index";
  Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="rose">
                        <i class="material-icons">person</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Users</p>
                        <h3 class="title">@Model.UsersCount</h3>
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="orange">
                        <i class="material-icons">mode_edit</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Authors</p>
                        <h3 class="title">@Model.AuthorsCount</h3>
                    </div>

                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="red">
                        <i class="material-icons">print</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Publishers</p>
                        <h3 class="title">@Model.PublishersCount</h3>
                    </div>

                </div>
            </div>
            @*<div class="col-lg-3 col-md-6 col-sm-6 ">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="purple">
                        <i class="material-icons">local_offer</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Categories</p>
                        <h3 class="title">@Model.CategoriesCount</h3>
                    </div>

                </div>
            </div>*@
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header" data-background-color="blue">
                        <i class="material-icons">book</i>
                    </div>
                    <div class="card-content">
                        <p class="category">Books</p>
                        <h3 class="title">@Model.BooksCount</h3>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
