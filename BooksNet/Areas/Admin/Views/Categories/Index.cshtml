@model IEnumerable<BooksNet.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-md-3"></div>
<div class="col-md-6">
    <div class="card">

        <div class="card-header card-header-icon" data-background-color="purple">
            <i class="material-icons">local_offer</i>
        </div>
        <h4 class="card-title">Categories</h4>
        <br />
        <div class="card-content table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Books)</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Books.Count)
                        </td>

                        <td class="td-actions text-right">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success btn-round"> <i class="material-icons">edit</i></a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-round"> <i class="material-icons">close</i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-3"></div>

<a href="@Url.Action("Create")" class=" btn btn-primary add fixed-corner"><i class="material-icons">add</i></a>